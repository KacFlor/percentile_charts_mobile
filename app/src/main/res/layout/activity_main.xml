<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnLangPL"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/flag_pl"
            app:backgroundTint="@null"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/btnLangLA"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/flag_rom"
            app:backgroundTint="@null"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvMainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select a Chart"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="40dp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnWeightBoys"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Weight for Age (Boys)"
            android:layout_marginBottom="10dp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnWeightGirls"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Weight for Age (Girls)"
            android:layout_marginBottom="10dp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnHeightBoys"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Height for Age (Boys)"
            android:layout_marginBottom="10dp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnHeightGirls"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Height for Age (Girls)"
            android:layout_marginBottom="10dp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnBMI"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="BMI for Age"
            android:layout_marginBottom="10dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvCopyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â© 2025 Medical Charts"
            android:layout_marginTop="30dp"
            android:textColor="#888888"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</LinearLayout>